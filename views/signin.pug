extends layout

block content
    .jumbotron
        h1 Sign in
        p We're using passport.js to demonstrate user authentication. Sign in with your Local, Twitter, Google, or Facebook account to view your profile.
        p
            a(data-toggle="collapse" href="#local" role="button").btn.btn-warning.btn-lg Sign in locally
            a(href="/auth/twitter" role="button").btn.btn-info.btn-lg Sign in with Twitter
            a(href="/auth/google" role="button").btn.btn-danger.btn-lg Sign in with Google
            a(href="/auth/facebook" role="button").btn.btn-primary.btn-lg Sign in with Facebook

        #local.collapse
            a(data-toggle="collapse" href="#local-sign-in" role="button").btn.btn-default.btn-md I already have an account
            a(data-toggle="collapse" href="#local-reg" role="button").btn.btn-default.btn-md I need to make an account

        form#local-sign-in(action="/login" method="post").collapse
            div
                p
                label(for="username") Username:
                input(type="text" name="username")
            div
               label(for="password") Password:
               input(type="password" name="password")
            div
                input(type="submit" value="Log in").btn.btn-primary.btn-sm

        form#local-reg(action="/local-reg" method="post").collapse
            div
                p
                label(for="username") Username:
                input(type="text" name="username")
            div
                label(for="password") Password:
                input(type="password" name="password")
            div
                input(type="submit" value="Register").btn.btn-primary.btn-sm